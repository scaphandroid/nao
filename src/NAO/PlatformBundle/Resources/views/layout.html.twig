{# src/NAO/PlatformBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}NAO{% endblock %}</title>

    {% block stylesheets %}

        {#    {% stylesheets '@NAOPlatformBundle/Resources/public/css/*' filter='cssrewrite' %}
               <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}

          <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">#}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
            <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />

        <link rel="icon" type="image/x-icon" href="" />

    {% endblock %}
</head>

<body class="container-fluid">
    <header>
        <div class="container">
            <div class="row entete">
                <div id="logo-header" class="col-sm-4 logo">
                    <a href="{{ path('nao_platform_home') }}">
                        <img src="{{ asset('images/logo-def.png') }}" alt="Logo de Nos Amis les Oiseaux" />
                    </a>
                </div>
                <div id="barre-recherche" class="col-sm-offset-4 col-sm-3 hidden-xs recherche">
                 {#   {{ form_start(form) }}
                    {{ form_errors(form) }}
                    {{ form_widget(form.nomVern) }}
                    {{ form_rest(form) }}
                    {{ form_end(form) }}#}
                    <form>
                        <input type="text" placeholder="Entrez une espèce d'oiseaux" value="">
                        <input type="submit" value="">
                    </form>
                </div>
            </div>
        {% block nav %}
            <!-- Navigation -->
            <nav id="boutons-nav" class="">
                <div class="menu_box_list">
                    <ul>
                        <li class="bouton_menu"><a href="{{ path('nao_platform_rechercher') }}"><i class="icon_rechercher"> </i><span>Rechercher</span></a></li>
                        <li class="bouton_menu"><a href="{{ path('nao_platform_observer') }}"><i class="icon_observer"> </i><span>Observer</span></a></li>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li class="bouton_menu"><a href="{{ path('fos_user_profile_show') }}"><i class="icon_naturalistes"> </i><span>Mon compte</span></a></li>
                        {% else %}
                            <li class="bouton_menu"><a href="{{ path('fos_user_security_login') }}"><i class="icon_naturalistes"> </i><span>Se connecter</span></a></li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        {% endblock %}
        </div>
    </header>
<div>

</div>
    <div class="body">
        {% block message %}
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block body %}
            <div>
                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>
        {% endblock %}
    </div>


    <!-- Pied de page  -->
    {% block footer %}
    <footer>
            <div class="row wrap">
                <div class="footer_left col-sm-6">
                    <div class="row logo">
                        <a href="{{ path('nao_platform_home') }}">
                            <img src="{{ asset('images/Logo-def.png') }}" alt="Logo de Nos Amis les Oiseaux" />
                        </a>
                    </div>
                    <div class="row footer_texte">
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
                    </div>
                </div>

                <div class="col-sm-offset-1 footer_right col-sm-5">
                    <div class="row footer_liens">
                        <ul class="footer_nav">
                            <li><a href="#">Découvrir</a></li> |
                            <li><a  href="#">Observer</a></li> |
                            <li><a href="#">S'inscrire</a></li> |
                            <li><a href="#">Contact</a></li>
                        </ul>
                    </div>
                    <div class="row footer_rs">
                        <ul>
                            <li><a href="#"> <i class="iconTwitter"> </i><span>Twitter</span></a></li>
                            <li><a href="#"> <i class="iconFacebook"> </i> <span>Facebook</span></a></li>
                         <!--   <li><a href="#"> <i class="iconRss"> </i><span>Rss</span></a></li> -->
                            <li><a href="#"> <i class="iconMail"> </i><span>Mail</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>

    </footer>
    {% endblock %}

{% block javascript %}
    <script src="{{ asset('js/jquery-3.1.1.js') }}"></script>
    <script src="{{ asset("js/header.js") }}"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <script src="{{ asset('js/autocompleter-jqueryui.js') }}"></script>
    <script src="{{ asset('js/autocomplete.js') }}"></script>
{% endblock %}

</body>

</html>