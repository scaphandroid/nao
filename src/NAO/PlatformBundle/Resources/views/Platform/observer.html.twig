{% extends "NAOPlatformBundle::layout.html.twig" %}
{% block title %}
    Observer
{% endblock %}

{% block body %}
    <div class="body">
        <h3>Formulaire de saisie</h3>
        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.espece, "Nom de l'espèce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.espece) }}
                <div class="col-sm-6">
                    {{ form_widget(form.espece, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <label class="checkbox-inline">
                    {{ form_widget(form.localise) }}
                    {{ form_label(form.localise) }}
                    {{ form_errors(form.localise) }}
                </label>
            </div>

            <div class="form-group">
                {{ form_label(form.dateObs, "Date de l'observation", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.dateObs) }}
                {{ form_widget(form.dateObs) }}

            </div>

            <div class="form-group">
                {{ form_label(form.photo, "Ajouter une photo", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.photo) }}
                <div class="col-sm-6">
                    {{ form_widget(form.photo) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.auteur, "Vous êtes un ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.auteur) }}
                <div class="col-sm-6">
                    {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <p>Ajouter en js lorsque particulier est selectionné champs email si naturaliste champs email+mdp</p>

            {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary col-sm-offset-5 col-sm-2'}}) }}

        </div>
    </div>

{% endblock %}